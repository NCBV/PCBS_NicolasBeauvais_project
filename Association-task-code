import random
from expyriment import design, control, stimuli

MAX_RESPONSE_DELAY = 2000
TARGETS = ["Coronavirus", "Flue", "Shortness of breath", "Harmful", "Danger", "Peaceful", "Safe", "Disease",] * 2
random.shuffle(TARGETS)

EVEN_RESPONSE = 's'
ODD_RESPONSE = 'l'

exp = design.Experiment(name="Implicit association", text_size=40)
control.initialize(exp)

cue = stimuli.FixCross(size=(50, 50), line_width=4)
blankscreen = stimuli.BlankScreen()
instructions = stimuli.TextScreen("Instructions",
    f"""When you'll see a word, your task is to decide, as quickly as possible, to which category it belongs.

    if it is related to COVID-19 or to Harm, press '{EVEN_RESPONSE}'

    if it is related to Other categories, press '{ODD_RESPONSE}'

    There will be {len(TARGETS)} trials in total.

    Press the space bar to start.""")

# prepare the stimuli
trials = []
for word in TARGETS:
    trials.append((word, stimuli.TextLine(str(word))))


exp.add_data_variable_names(['number', 'respkey', 'RT'])

control.start(skip_ready_screen=True)
instructions.present()
exp.keyboard.wait()

for t in trials:
    blankscreen.present()
    exp.clock.wait(1000)
    cue.present()
    exp.clock.wait(500)
    t[1].present()
    key, rt = exp.keyboard.wait(EVEN_RESPONSE + ODD_RESPONSE, duration=MAX_RESPONSE_DELAY)
    exp.data.add([t[0],  key, rt])

control.end()
